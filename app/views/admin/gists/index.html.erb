<h1>Gists</h1>

<table class= "table table-light table-striped-columns">
  <tr>
    <th>Question</th>
    <th>Gist URL</th>
    <th>User</th>
  </tr>
  <tr>
    <td><%= link_to gist.question.body.truncate(25), admin_question_path(gist.question) %></td>
    <td><%= link_to "Link", gist.url, target: "_blank" %></td>
    <td><%= gist.user.email %></td>
  </tr>
</table>
